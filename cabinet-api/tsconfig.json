{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "allowJs": true,
        "checkJs": false,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmitOnError": false,
        "downlevelIteration": true
    },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist", "eslint.config.js", "jest.config.js"]
}
